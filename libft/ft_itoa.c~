#include "libft.h"

char		*ft_itoa(int n)
{
	char	*str;

	str = (char *)malloc(sizeof(int) * 100);
	if (n > -10 && n < 10)
	{
		if (n < 0)
			n = -n ; 
		str[0] = n + '0';
		str[1] = '\0';
		return (str);
	}
	else
		str = NULL;
	return (str);
}
